<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" />
  </system.web>
  <!-- When deploying the service library project, the content of the config file must be added to the host's 
  app.config file. System.Configuration does not support config files for libraries. -->
  <system.serviceModel>
    <services>
      <service name="RestAndSoapWSLab.Service1">
        <endpoint address="" binding="basicHttpBinding" bindingConfiguration=""
          contract="RestAndSoapWSLab.IService1">
        </endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8732/Service1" />
          </baseAddresses>
        </host>
      </service>
      <service name="RestAndSoapWSLab.ServiceMonitoring">
        <endpoint name="IServiceMonitoring" address="" binding="wsDualHttpBinding" bindingConfiguration=""
          contract="RestAndSoapWSLab.IServiceMonitoring" />
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
      
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8732/Monitoring" />
          </baseAddresses>
        </host>
      </service>
      <service behaviorConfiguration="CityLookerServiceBehavior" name="EventsLib.CityLookerService">
        <endpoint address="" binding="wsDualHttpBinding" contract="EventsLib.ICityLookerService"  bindingConfiguration=""/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8732/CalcService" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!-- To avoid disclosing metadata information, 
          set the values below to false before deployment -->
          <serviceMetadata httpGetEnabled="True" httpsGetEnabled="True"/>
          <!-- To receive exception details in faults for debugging purposes, 
          set the value below to true.  Set to false before deployment 
          to avoid disclosing exception information -->
          <serviceDebug includeExceptionDetailInFaults="False" />
        </behavior>
        <behavior name="CityLookerServiceBehavior">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true "/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>

</configuration>
